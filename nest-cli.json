{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "webpack": true,
    "plugins": [
      {
      "name":"@nestjs/swagger",
      "options":{
        "classValidatorShim": false,
        "introspectComments": true
      }
    }
  ],
    "assets": [
      "templates/**/*"
    ]
  }
}
